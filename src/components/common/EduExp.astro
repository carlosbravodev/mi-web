---
const { fecha, sitio, rol, techi } = Astro.props;
---

<div
  class="flex flex-col gap-2 sm:w-full md:items-center lg:flex-row lg:items-start lg:gap-4"
>
  <div>
    <h4 class="text-xl text-violet-700 font-bold">{fecha}</h4>
  </div>
  <div>
    <h4 class="font-bold text-lg">{sitio}</h4>
    <p class="text-zinc-400">{rol}</p>
    <p class="underline text-sm">{techi}</p>
  </div>
</div>
